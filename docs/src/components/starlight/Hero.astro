---
import Default from '@astrojs/starlight/components/Hero.astro';
---

<Default><slot /></Default>

<style>
  /* Typewriter animation for terminal command */
  :global(.hero-terminal-cmd) {
    overflow: hidden;
    white-space: nowrap;
    border-right: none;
    width: 0;
    animation: typewriter 2s steps(42) 0.5s forwards;
  }
  @keyframes typewriter {
    from { width: 0; }
    to { width: 100%; }
  }

  /* Cursor only appears after typing completes */
  :global(.hero-terminal-cursor) {
    opacity: 0;
    animation: cursor-appear 0.01s 2.5s forwards, cursor-blink 1s step-end 2.5s infinite;
  }
  @keyframes cursor-appear {
    to { opacity: 1; }
  }
  @keyframes cursor-blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  /* Agent badges entrance animation */
  :global(.hero-agents-row) {
    opacity: 0;
    animation: fade-up 0.5s ease 2.8s forwards;
  }
  @keyframes fade-up {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Terminal entrance animation */
  :global(.hero-terminal) {
    opacity: 0;
    animation: terminal-entrance 0.6s ease 0.2s forwards;
  }
  @keyframes terminal-entrance {
    from { opacity: 0; transform: translateY(20px) scale(0.98); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }
</style>
